<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"

    android:orientation="vertical"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">


        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/thumb_img"
            android:gravity="right"
            android:paddingBottom="3dp"
            android:paddingRight="4dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#b4655a"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/title_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/thumb_img"
            android:layout_toRightOf="@+id/thumb_img"
            android:gravity="fill_horizontal"
            android:lines="3"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:text="Msdsds"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            />


        <TextView

            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/date_text"
            android:layout_alignEnd="@+id/title_text"
            android:layout_alignRight="@+id/title_text"
            android:layout_below="@+id/title_text"

            android:layout_toEndOf="@+id/thumb_img"
            android:layout_toRightOf="@+id/thumb_img"

            android:fontFamily="sans-serif"
            android:gravity="left"


            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/thumb_img"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:paddingLeft="2dp"

            />
    </RelativeLayout>


</android.support.v7.widget.CardView>