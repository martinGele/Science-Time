<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"


    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/thumb_img"
            android:layout_toRightOf="@+id/thumb_img"
            android:gravity="center"
            android:lines="2"
            android:padding="2dp"
            android:text="Msdsds"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"

            />


        <TextView

            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_text"
            android:layout_alignEnd="@+id/title_text"
            android:layout_alignRight="@+id/title_text"
            android:layout_below="@+id/title_text"

            android:layout_toEndOf="@+id/thumb_img"
            android:layout_toRightOf="@+id/thumb_img"
            android:layout_weight="0.76"
            android:textColor="@color/colorDescription"
            android:gravity="left"
            android:lines="3"


            android:padding="5dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/thumb_img"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/thumb_img"
            android:gravity="right"
            android:paddingBottom="3dp"
            android:paddingRight="4dp"
            android:paddingTop="3dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#b4655a"
            android:textSize="12sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>